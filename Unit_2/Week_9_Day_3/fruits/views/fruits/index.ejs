<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %>

<body>
    <%- include('../partials/header.ejs') %>

    <main>
        <div>
            <% fruits.forEach((fruit) => { %>
                <article>
                    <a href="/fruits/<%= fruit._id %>">
                        <h2>
                            <%= fruit.name %> - <%= fruit.readyToEat %>
                        </h2>
                    </a>
                </article>
                
            <% }) %>
        </div>
    </main>
</body>
</html>