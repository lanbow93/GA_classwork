<%- include("../partials/head.ejs") %>

<div class="container">
    <form action="/animals" method="post">
        <div class="row text-center">
            <h1>Animal Creation Form</h1>
        </div>
        <div class="row">
            <div class="col"><p>Species Name:</p></div>
            <div class="col"><input type="text" name="species" placeholder="Species Name"></div>
        </div>
        <div class="row">
            <div class="col"><p>Image URL:</p></div>
            <div class="col"><input type="text" name="image" placeholder="Image URL"></div>
        </div>
        <div class="row">
            <div class="col"><p>Location:</p></div>
            <div class="col"><input type="text" name="location" placeholder="Location of Species"></div>
        </div>
        <div class="row">
            <div class="col"><p>Check Box If Extinct:</p></div>
            <div class="col"><input type="checkbox" name="isExtinct"></div>
        </div>
        <div class="row">
            <input type="submit" value="Add Animal To Database" class="btn bg-success text-white fw-bold">
        </div>
    </form>
</div>