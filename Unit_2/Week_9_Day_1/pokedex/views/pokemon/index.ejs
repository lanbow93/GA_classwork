<%- include("../partials/head.ejs")%>
<% let base = (page * 6) - 6; 
const missing = {
    name: "Not Listed",
    img: "https://i0.wp.com/www.alphr.com/wp-content/uploads/2016/07/whos_that_pokemon.png"
}
%>
<div class="container-lg-fluid bg-warning">
    <h1 class="text-center mb-0">Select A Pokemon For More Information</h1>
</div>
<div class="container-lg-fluid border bg-danger">
        <div class="row m-3">
            <div class="col-4"><a href="/pokemon/<%= base %>"><img src="<%= AllPokemon[ base ] ? AllPokemon[ base ].img : missing.img %>" alt="Picture of <%= AllPokemon[base] ? AllPokemon[base].name : missing.name %>"></a></div>
            <div class="col-4"><a href="/pokemon/<%= base + 1 %>"><img src="<%= AllPokemon[ base + 1 ] ? AllPokemon[ base + 1 ].img : missing.img %>" alt="Picture of <%= AllPokemon[base + 1] ? AllPokemon[base + 1].name : missing.name  %>"></a></div>
            <div class="col-4"><a href="/pokemon/<%= base + 2 %>"><img src="<%= AllPokemon[base + 2] ? AllPokemon[base + 2].img : missing.img %>" alt="Picture of <%= AllPokemon[base + 2] ? AllPokemon[base + 2].name : missing.name %>"></a></div>
        </div>
        <div class="row m-3 jc-spacebetween">
            <div class="col-4"><h3><%= AllPokemon[base] ? AllPokemon[base].name : missing.name %></h3></div>
            <div class="col-4"><h3><%= AllPokemon[base + 1] ? AllPokemon[base + 1].name : missing.name %></h3></div>
            <div class="col-4"><h3><%= AllPokemon[base + 2] ? AllPokemon[base + 2].name : missing.name %></h3></div>
        </div>
        <div class="row m-3">
            <div class="col-4"><a href="/pokemon/<%= base + 3 %>"><img src="<%= AllPokemon[ base + 3] ? AllPokemon[ base + 3].img : missing.img  %>" alt="Picture of <%= AllPokemon[ base + 3] ? AllPokemon[ base + 3].name : missing.name %>"></a></div>
            <div class="col-4"><a href="/pokemon/<%= base + 4 %>"><img src="<%= AllPokemon[base + 4] ? AllPokemon[base + 4].img : missing.img %>" alt="Picture of <%= AllPokemon[ base + 4] ? AllPokemon[ base + 4].name : missing.name %>"></a></div>
            <div class="col-4"><a href="/pokemon/<%= base + 5 %>"><img src="<%= AllPokemon[base + 5] ? AllPokemon[base + 5].img : missing.img %>" alt="Picture of <%= AllPokemon[ base + 5] ? AllPokemon[ base + 5].name : missing.name %>"></a></div>
        </div>
        <div class="row m-3">
            <div class="col-4"><h3><%= AllPokemon[ base + 3] ? AllPokemon[ base + 3].name : missing.name %></h3></div>
            <div class="col-4"><h3><%= AllPokemon[ base + 4] ? AllPokemon[ base + 4].name : missing.name %></h3></div>
            <div class="col-4"><h3><%= AllPokemon[ base + 5] ? AllPokemon[ base + 5].name : missing.name %></h3></div>
        </div>
        <div class="row">
            <div class="btn-group mt-5">
                <a href="/pokemon?page=<%= page - 1%>" class="btn btn-success" >Backward</a>
                <a href="/pokemon" class="btn btn-warning" >Beginning Of List</a>
                <a href="/pokemon?page=<%= page + 1%>" class="btn btn-success" >Forward</a>
            </div>
        </div>
        <div class="row border">
            <button class="btn btn-success btn-outline-info" onclick="window.location.href='/pokemon/new'">Log A New Pokemon</button>
        </div>
    
</div>
